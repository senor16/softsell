<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="images/x-icon" href="{{ asset('icon.ico') }}"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Spartan&display=swap"/>
        {#        <link rel="stylesheet" href="{{ asset('uploads/images/google_font_Spartan.css') }}">#}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css"/>
        {#        <link rel="stylesheet" href="{{ asset('uploads/flatly-bootswatch.min.css') }}"/>#}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
              integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous"/>
        <link rel="stylesheet" href="{{ asset('css/app.css') }}"/>

    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="{{ path('home') }}">Jakpaa</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
            aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('home') }}">Accueil</a>
            </li>
            {% if is_granted('ROLE_USER') %}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button"
                       aria-haspopup="true"
                       aria-expanded="false">{{ app.user.firstname }}</a>
                    <div class="dropdown-menu">


                        <a class="dropdown-item" href="{{ path('application_library') }}">Ma Librairie</a>
                        <a class="dropdown-item" href="{{ path('application_recommendations') }}">Recommendations</a>
                        {% if is_granted('ROLE_DEVELOPER') %}
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('dashboard') }}">Console</a>
                            <a class="dropdown-item" href="{{ path('application_new') }}">Ajouter une application</a>
                        {% endif %}
                        <a class="dropdown-item" href="{{ path('user_profile') }}">Profil</a>
                        <a class="dropdown-item" href="{{ path('user_settings') }}">Paramètres</a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">Déconexion</a>

                    </div>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('security_user_sign_up') }}">Inscription</a>
                </li>

            {% endif %}
            <li class="nav-item">
                <a class="nav-link" href="#">À propos</a>
            </li>

        </ul>
        <form class="form-inline my-2 my-lg-0" action="{{ path('apllication_search') }}" method="get">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" name="q">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>


<div class="container">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    {#    <script src="{{ asset('uploads/jquery.3.5.1.js') }}"></script>#}
{#    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.5.3/umd/popper.min.js"></script>#}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

{% endblock %}
</body>
</html>
