{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="col-6" style="margin: auto;">
        <h1>Connexion</h1>
        <form action="{{ path('security_login') }}" method="POST">
            <div class="form-group">
                <label for="_username">
                    Nom d'utilisateur:
                </label>
                    <input  id ="_username" type="text" class="form-control" placeholder="Ex : dedma" name="_username">
            </div>
            <div class="form-group">
                <label for="_password">
                    Mot de passe:
                </label>
                    <input id="_password" type="password" class="form-control" placeholder="votremotdepasse" name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
            </div>
        </form>
    </div>
{% endblock %}


